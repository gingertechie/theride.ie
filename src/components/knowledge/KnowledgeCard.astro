---
/**
 * Knowledge Card Component
 * Displays knowledge article with difficulty badge and hover effects
 */

interface Props {
  title: string;
  slug: string;
  summary: string;
  difficulty: 'Beginner' | 'Intermediate' | 'Advanced';
  readTime: string;
}

const { title, slug, summary, difficulty, readTime } = Astro.props;

// Difficulty badge styling
const difficultyStyles = {
  Beginner: 'bg-neon-green/20 text-neon-green border-neon-green',
  Intermediate: 'bg-neon-yellow/20 text-neon-yellow border-neon-yellow',
  Advanced: 'bg-neon-cyan/20 text-neon-cyan border-neon-cyan'
};
---

<article class="bg-velvet-midnight rounded-xl border-2 border-neon-yellow/30 p-6 transition-all duration-300 hover:border-neon-yellow/60 hover:shadow-[0_0_20px_rgba(204,255,0,0.3)]">
  <!-- Difficulty Badge -->
  <div class="mb-3">
    <span class={`inline-block px-3 py-1 rounded-full text-xs font-medium border ${difficultyStyles[difficulty]}`}>
      {difficulty}
    </span>
  </div>

  <!-- Title -->
  <h2 class="text-2xl font-bold text-white mb-3 transition-colors">
    <a href={`/knowledge/${slug}`} class="hover:text-neon-yellow">
      {title}
    </a>
  </h2>

  <!-- Summary -->
  <p class="text-text-secondary text-base leading-relaxed mb-4">
    {summary}
  </p>

  <!-- Metadata -->
  <div class="flex items-center gap-4 text-text-muted text-sm">
    <span>ðŸ“– {readTime} read</span>
  </div>
</article>
